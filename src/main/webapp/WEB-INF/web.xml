<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <listener>
    <listener-class>org.vitaly.listener.ServletContextListenerImpl</listener-class>
  </listener>

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>org.vitaly.filter.EncodingFilter</filter-class>
    <init-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>UrlFilter</filter-name>
    <filter-class>org.vitaly.filter.UrlFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>UrlFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>PermissionFilter</filter-name>
    <filter-class>org.vitaly.filter.PermissionFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>PermissionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>CarRental</servlet-name>
    <servlet-class>org.vitaly.servlet.CarRentalServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CarRental</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>